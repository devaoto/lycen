{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 100,
    "lineEnding": "lf",
    "ignore": ["**/node_modules/**", "**/dist/**", "**/build/**"],
    "formatWithErrors": false
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "double",
      "trailingCommas": "all",
      "semicolons": "always",
      "arrowParentheses": "always",
      "bracketSpacing": true,
      "bracketSameLine": false
    }
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "correctness": {
        "recommended": true,
        "noUnusedVariables": "error",
        "noUndeclaredVariables": "error",
        "noConstantCondition": "error"
      },
      "suspicious": {
        "recommended": true,
        "noExplicitAny": "error",
        "noDoubleEquals": "error",
        "noConsoleLog": "warn",
        "noDebugger": "error"
      },
      "complexity": {
        "recommended": true,
        "noForEach": "warn",
        "useOptionalChain": "error",
        "useSimplifiedLogicExpression": "error"
      },
      "performance": {
        "recommended": true,
        "noDelete": "error"
      },
      "style": {
        "recommended": true,
        "useConst": "error",
        "useTemplate": "error",
        "noNonNullAssertion": "error",
        "noParameterAssign": "error"
      },
      "security": {
        "recommended": true,
        "noDangerouslySetInnerHtml": "error"
      }
    }
  },
  "organizeImports": {
    "enabled": true
  },
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "files": {
    "ignoreUnknown": true,
    "maxSize": 2097152
  }
}
